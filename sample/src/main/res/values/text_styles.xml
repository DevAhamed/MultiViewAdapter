<resources>

  <style name="TextAppearance.App.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
    <item name="fontFamily">@font/light</item>
    <item name="android:fontFamily">@font/light</item>
    <item name="android:textSize">@dimen/font_xlarge</item>
  </style>

  <style name="TextAppearance.App.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
    <item name="fontFamily">@font/extrabold</item>
    <item name="android:fontFamily">@font/extrabold</item>
  </style>

  <style name="TextAppearance.App.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
    <item name="fontFamily">@font/extrabold</item>
    <item name="android:fontFamily">@font/extrabold</item>
  </style>

  <style name="TextAppearance.App.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
    <item name="fontFamily">@font/extrabold</item>
    <item name="android:fontFamily">@font/extrabold</item>
  </style>

  <style name="TextAppearance.App.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
    <item name="fontFamily">@font/bold</item>
    <item name="android:fontFamily">@font/bold</item>
  </style>

  <style name="TextAppearance.App.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
    <item name="fontFamily">@font/medium</item>
    <item name="android:fontFamily">@font/medium</item>
    <item name="android:textSize">18sp</item>
  </style>

  <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
    <item name="fontFamily">@font/medium</item>
    <item name="android:fontFamily">@font/medium</item>
  </style>

  <style name="TextAppearance.App.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
    <item name="fontFamily">@font/medium</item>
    <item name="android:fontFamily">@font/medium</item>
  </style>

  <style name="TextAppearance.App.Body1" parent="TextAppearance.MaterialComponents.Body1">
    <item name="fontFamily">@font/regular</item>
    <item name="android:fontFamily">@font/regular</item>
    <item name="android:letterSpacing">0.0</item>
  </style>

  <style name="TextAppearance.App.Body2" parent="TextAppearance.MaterialComponents.Body2">
    <item name="fontFamily">@font/regular</item>
    <item name="android:fontFamily">@font/regular</item>
    <item name="android:letterSpacing">0.0</item>
  </style>

  <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
    <item name="fontFamily">@font/semibold</item>
    <item name="android:fontFamily">@font/semibold</item>
  </style>

  <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
    <item name="fontFamily">@font/regular</item>
    <item name="android:fontFamily">@font/regular</item>
  </style>

  <style name="TextAppearance.App.Overline" parent="TextAppearance.MaterialComponents.Overline">
    <item name="fontFamily">@font/semibold</item>
    <item name="android:fontFamily">@font/semibold</item>
    <item name="android:letterSpacing">0.1</item>
  </style>


  <!-- TITLE -->

  <style name="App.Text.Title" parent="TextAppearance.App.Subtitle1">
    <item name="fontFamily">@font/semibold</item>
    <item name="android:fontFamily">@font/semibold</item>
    <item name="android:textSize">@dimen/font_xlarge</item>
  </style>

  <style name="App.Text.Title.One">
    <item name="android:textColor">@color/text_color_title1</item>
  </style>

  <style name="App.Text.Title.Two">
    <item name="android:textColor">@color/text_color_title2</item>
  </style>

  <style name="App.Text.Title.Three">
    <item name="android:textColor">@color/text_color_title3</item>
  </style>

  <!-- SUB TITLE -->

  <style name="App.Text.SubTitle" parent="TextAppearance.App.Subtitle1">
    <item name="fontFamily">@font/semibold</item>
    <item name="android:fontFamily">@font/semibold</item>
    <item name="android:textSize">@dimen/font_medium</item>
  </style>

  <style name="App.Text.SubTitle.One">
    <item name="android:textColor">@color/text_color_title1</item>
  </style>

  <style name="App.Text.SubTitle.Two">
    <item name="android:textColor">@color/text_color_title2</item>
  </style>

  <style name="App.Text.SubTitle.Three">
    <item name="android:textColor">@color/text_color_title3</item>
  </style>

  <!-- BODY PRIMARY -->

  <style name="App.Text.Body" parent="TextAppearance.App.Body1">
    <item name="fontFamily">@font/regular</item>
    <item name="android:fontFamily">@font/regular</item>
    <item name="android:textAppearance">@style/TextAppearance.App.Body1</item>
  </style>

  <style name="App.Text.Body.Primary">
    <item name="android:textSize">@dimen/font_medium</item>
  </style>

  <style name="App.Text.Body.Primary.One">
    <item name="android:textColor">@color/text_color_body_primary1</item>
  </style>

  <style name="App.Text.Body.Primary.Two">
    <item name="android:textColor">@color/text_color_body_primary2</item>
  </style>

  <style name="App.Text.Body.Primary.Three">
    <item name="android:textColor">@color/text_color_body_primary3</item>
  </style>

  <!-- BODY SECONDARY -->

  <style name="App.Text.Body.Secondary">
    <item name="android:textSize">@dimen/font_regular</item>
  </style>

  <style name="App.Text.Body.Secondary.One">
    <item name="android:textColor">@color/text_color_body_primary1</item>
  </style>

  <style name="App.Text.Body.Secondary.Two">
    <item name="android:textColor">@color/text_color_body_primary2</item>
  </style>

  <style name="App.Text.Body.Secondary.Three">
    <item name="android:textColor">@color/text_color_body_primary3</item>
  </style>

  <!-- COMMENT -->

  <style name="App.Text.Body.Comment">
    <item name="android:textSize">@dimen/font_small</item>
  </style>

  <style name="App.Text.Body.Comment.One">
    <item name="android:textColor">@color/text_color_body_primary1</item>
  </style>

  <style name="App.Text.Body.Comment.Two">
    <item name="android:textColor">@color/text_color_body_primary2</item>
  </style>

  <style name="App.Text.Body.Comment.Three">
    <item name="android:textColor">@color/text_color_body_primary3</item>
  </style>

  <!-- EMPHASIZED -->

  <style name="App.Text.Body.Emphasized">
    <item name="android:textSize">@dimen/font_regular</item>
    <item name="fontFamily">@font/medium</item>
    <item name="android:fontFamily">@font/medium</item>
  </style>

  <style name="App.Text.Body.Emphasized.One">
    <item name="android:textColor">@color/text_color_body_primary1</item>
    <item name="fontFamily">@font/semibold</item>
    <item name="android:fontFamily">@font/semibold</item>
  </style>

  <style name="App.Text.Body.Emphasized.Two">
    <item name="android:textColor">@color/text_color_body_primary1</item>
  </style>

  <style name="App.Text.Body.Emphasized.Three">
    <item name="android:textColor">@color/text_color_body_primary3</item>
  </style>

  <!-- OVERLINE -->

  <style name="App.Text.Overline" parent="">
    <item name="fontFamily">@font/semibold</item>
    <item name="android:fontFamily">@font/semibold</item>
    <item name="android:textSize">@dimen/font_small</item>
    <item name="android:textAllCaps">true</item>
  </style>

  <style name="App.Text.Overline.One">
    <item name="android:textColor">@color/text_color_body_primary1</item>
  </style>

  <style name="App.Text.Overline.Two">
    <item name="android:textColor">@color/text_color_body_primary2</item>
  </style>

  <style name="App.Text.Overline.Three">
    <item name="android:textColor">@color/text_color_body_primary3</item>
  </style>

</resources>